<h1>Passenger Info</h1>

<div id="flight-info">
  <%= "#{@flight.from_airport.code} > #{@flight.to_airport.code}" %>
  </div>
  <br>
<%= form_for @booking, url: bookings_new_path, html: { method: :post } do |f| %>
  <%= f.hidden_field :flight_id, { value: @flight.id } %>
<%= f.fields_for :passengers do |passenger_field| %>

    <strong>
    <%= passenger_field.label "Passenger #{(passenger_field.index + 1)}: " %>
    </strong><br>
    <%= passenger_field.label :name %>
    <%= passenger_field.text_field :name %>

    <%= passenger_field.label :email %>
    <%= passenger_field.text_field :email %>
    <br><br>
<% end %>

<%= f.submit "Book" %>
<% end %>
